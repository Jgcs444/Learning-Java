	package curso_programacao_1;
	import java.util.Scanner;
	
	public class Funcoes {
	
		public static void main(String[] args) {
			
			Scanner sc = new Scanner(System.in);
			
			
			System.out.println("Por favor, informe um número:");
			int x = sc.nextInt();
			int y = CalcularRaizQuadrada(x); // O que esta entre () é o argumento/parametro, ou seja, o dado de entrada.
			
			System.out.println(y);
			
			sc.close();
			
		}
		
		private static int CalcularRaizQuadrada (int valor) {
			return  (int) Math.sqrt(valor);
			// Uma função pode ou não retornar uma saída
			// Em orientação a objetos, funções em classes recebem o nome de "métodos"
		}
	
	}
